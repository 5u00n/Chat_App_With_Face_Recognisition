<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.SeeProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="@color/primaryDarkColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/view_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"></ImageButton>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_below="@id/view_toolbar"
        android:id="@+id/view_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textSize="32sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/view_topic"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        app:cardCornerRadius="350dp">

        <ImageView
            android:id="@+id/view_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_card"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="30dp"
        android:hint="Name..." />


    <Button
        android:id="@+id/view_addfacedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_name"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="30dp"
        android:text="Add Extra Face Data" />
</RelativeLayout>